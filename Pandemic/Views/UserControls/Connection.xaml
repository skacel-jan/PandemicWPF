<UserControl
    x:Class="Pandemic.Views.UserControls.Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pandemic.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="connection"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Line
        X1="{Binding Source.X, ElementName=connection}"
        X2="{Binding Destination.X, ElementName=connection}"
        Y1="{Binding Source.Y, ElementName=connection}"
        Y2="{Binding Destination.Y, ElementName=connection}" />
</UserControl>
