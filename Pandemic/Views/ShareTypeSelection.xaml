<UserControl x:Class="Pandemic.Views.ShareTypeSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Pandemic"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Command="{Binding ShareTypeSelectedCommand}"
                CommandParameter="{x:Static local:ShareType.Give}"
                Content="Give"
                Style="{StaticResource ActionButtonStyle}" />
        <Button Grid.Column="1"
                Command="{Binding ShareTypeSelectedCommand}"
                CommandParameter="{x:Static local:ShareType.Take}"
                Content="Take"
                Style="{StaticResource ActionButtonStyle}" />
    </Grid>
</UserControl>
