<UserControl x:Class="PandemicLegacy.Views.MapCityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PandemicLegacy.Views"
             mc:Ignorable="d"
             d:DesignHeight="75"
             d:DesignWidth="75">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}"
                   x:Key="YellowDiseaseButton">
                <Setter Property="Background"
                        Value="Yellow" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid Width="{TemplateBinding Width}"
                                  Height="{TemplateBinding Height}">
                                <Ellipse Fill="{TemplateBinding Background}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="15" />
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Margin="1"
                                         Fill="#FFF5F5BC">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="3" />
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Margin="2"
                                         Fill="{TemplateBinding Background}"
                                         StrokeThickness="1"
                                         Stroke="#FFBDBD92" />
                                <Control Margin="4"
                                         Width="{TemplateBinding Width}"
                                         Height="{TemplateBinding Height}"
                                         Template="{DynamicResource YellowVirusShape}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="true">
                        <Setter Property="Background"
                                Value="GreenYellow" />
                    </Trigger>
                    <Trigger Property="IsPressed"
                             Value="True">
                        <Setter Property="Background"
                                Value="RoyalBlue" />
                    </Trigger>
                    <Trigger Property="IsEnabled"
                             Value="False">
                        <Setter Property="Background"
                                Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*" />
            <RowDefinition Height="31*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1"
                Grid.Row="1"
                Style="{StaticResource YellowDiseaseButton}"
                Click="Button_Click"
                Grid.RowSpan="2" />
        <Rectangle Margin="3"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   Grid.Row="2"
                   Fill="#FFF4F4F5"
                   Stroke="#FFBDBD92"
                   StrokeThickness="1"
                   Visibility="{Binding DataContext.HasResearchStation, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MapCityControl}}}" />
        <Ellipse Visibility="{Binding DataContext.Pawn, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MapCityControl}}}"
                 Margin="3"
                 Fill="{Binding DataContext.Pawn.ColorBrush}"
                 Stroke="Black" />
        <Label Content="{Binding DataContext.City.Name, FallbackValue=None, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MapCityControl}}}"
               Grid.Row="4"
               Grid.ColumnSpan="3"
               Foreground="White"
               FontSize="7"
               Padding="0"
               HorizontalContentAlignment="Center">
            <Label.Effect>
                <DropShadowEffect Opacity="0.8"
                                  ShadowDepth="2.5"
                                  Direction="320" />
            </Label.Effect>
        </Label>
    </Grid>
</UserControl>
