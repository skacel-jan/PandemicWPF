            <Button Content="Cancel"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="53"
                    Margin="-122,0,0,0"
                    Height="36"
                    Background="Black"
                    Foreground="Red"
                    Command="{Binding CancelCommand}"
                    RenderTransformOrigin="-5.83,-0.056" />
            <Button Content="Generate"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="53"
                    Margin="93,0,-95,0"
                    Height="36"
                    Background="Black"
                    Foreground="Red"
                    Command="{Binding GenerateCommand}"
                    Grid.Column="4" />
