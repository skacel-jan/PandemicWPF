<UserControl x:Class="PandemicLegacy.Views.MoveSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PandemicLegacy.Views"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             x:Name="root">
    <Grid>
        <ItemsControl ItemsSource="{Binding Moves}"
                      Background="Black">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}"
                            BorderBrush="{StaticResource ActionEnabledBrush}"
                            BorderThickness="2"
                            FontSize="18"
                            Background="Black"
                            Foreground="White"
                            Command="{Binding DataContext.MoveSelectedCommand, Mode=OneWay, ElementName=root}"
                            CommandParameter="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
